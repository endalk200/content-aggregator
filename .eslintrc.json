{
    "root": true,
    "ignorePatterns": [
        "**/*"
    ],
    "plugins": [
        "@nrwl/nx"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@nrwl/nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": false,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "type:app",
                                "onlyDependOnLibsWithTags": [
                                    "type:feat",
                                    "type:data-access",
                                    "type:util",
                                    "type:shared",
                                    "type:ui"
                                ]
                            },
                            {
                                "sourceTag": "type:feat",
                                "onlyDependOnLibsWithTags": [
                                    "type:feat",
                                    "type:data-access",
                                    "type:util",
                                    "type:shared",
                                    "type:ui"
                                ]
                            },
                            {
                                "sourceTag": "type:data-access",
                                "onlyDependOnLibsWithTags": [
                                    "type:data-access",
                                    "type:util",
                                    "type:shared"
                                ]
                            },
                            {
                                "sourceTag": "type:util",
                                "onlyDependOnLibsWithTags": []
                            },
                            {
                                "sourceTag": "type:shared",
                                "onlyDependOnLibsWithTags": []
                            },
                            {
                                "sourceTag": "type:ui",
                                "onlyDependOnLibsWithTags": [
                                    "type:shared",
                                    "type:util"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "extends": [
                "plugin:@nrwl/nx/typescript"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "extends": [
                "plugin:@nrwl/nx/javascript"
            ],
            "rules": {}
        }
    ]
}